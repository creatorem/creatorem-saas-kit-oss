{
    "extends": "@kit/tsconfig/base.json",
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["ES2022", "dom", "dom.iterable"],
        "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
        "allowJs": true,
        "checkJs": true,
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "dist"]
}
