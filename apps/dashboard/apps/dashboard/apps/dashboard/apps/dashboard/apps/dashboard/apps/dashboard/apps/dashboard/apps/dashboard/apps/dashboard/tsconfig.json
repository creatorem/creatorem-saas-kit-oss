{
    "extends": "@kit/tsconfig/base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "typeRoots": ["./node_modules/@types", "./@types"],
        "paths": {
            "~/*": ["./*"],
            "~/envs": ["./envs.ts"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "*.mjs",
        ".next/types/**/*.ts",
        "*.ts",
        "*.tsx",
        "./config/**/*.ts",
        "components/**/*",
        "lib/**/*.ts",
        "app"
   ],
    "exclude": [
        ".cache",
        ".next",
        ".turbo",
        "build",
        "dist",
        "node_modules",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx",
        "jest.setup.ts",
        "jest.config.ts"
    ]
}
