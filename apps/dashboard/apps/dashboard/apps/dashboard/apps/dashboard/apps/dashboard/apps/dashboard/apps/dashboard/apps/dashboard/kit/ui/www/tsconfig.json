{
    "extends": "@kit/tsconfig/base.json",
    "compilerOptions": {
        "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"],
            "~/envs": ["./envs.ts"],
            "~/components/*": ["./src/components/*"],
            "~/shadcn/*": ["./src/shadcn/*"],
            "~/lib/*": ["./src/lib/*"],
            "~/hooks": ["./src/hooks"]
        }
    },
    "include": ["*.ts", "src"],
    "exclude": ["node_modules"]
}
